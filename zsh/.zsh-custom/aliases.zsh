alias sl='ls'
alias o='xopen'
alias p='python3'
alias igrep='grep -i'
alias getpid='xprop | grep -i pid | sed "s/[^0-9]//g"'
alias freeze='kill -SIGSTOP $(getpid)'
alias unfreeze='kill -SIGCONT $(getpid)'
which lsd &> /dev/null && alias ls='lsd'
which bat &> /dev/null && alias cat='bat'
which batcat &> /dev/null && alias cat='batcat'
which fdfind &> /dev/null && alias fd='fdfind'
which code &> /dev/null || alias code='codium'
alias clip='xclip -sel clip'
alias build='cmakebuild'
alias rp='realpath'
alias '?'='echo $?'
alias ipecho='curl https://ipecho.net/plain'
alias ip4echo='curl -4 https://ipecho.net/plain'
alias ip6echo='curl -6 https://ipecho.net/plain'
alias lower='tr "[:upper:]" "[:lower:]"'
alias upper='tr "[:lower:]" "[:upper:]"'
alias nvrun='__NV_PRIME_RENDER_OFFLOAD=1 __GLX_VENDOR_LIBRARY_NAME=nvidia'
alias lzd='lazydocker'
alias lzg='lazygit'
alias et='exiftool'
alias z='zoxide'
alias less='less -INR'
alias c='clear'
alias grpo='git remote prune origin'
